    <title>Invoice receipt - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
                        
<div class="receipt-content">
    <div class="container bootstrap snippets bootdey">
		<div class="row">
			
				<div class="invoice-wrapper">
					<div class="payment-info">
						<div class="row">
							<div class="col-sm-6">
								<span>Invoice No.</span>
								<strong>{{order.id}}</strong>
							</div>
							<div class="col-sm-6 text-right">
								<span>Order Date</span>
								<strong>{{order.order_date}}</strong>
							</div>
							<div class="col-sm-6 text-right">
								<span>Due Date</span>
								<strong>{{order.due_date}}</strong>
							</div>
						</div>
					</div>

					<div class="payment-details">
						<div class="row">
							<div class="col-sm-6">
								<span>Client</span>
								<strong>
									{{customer.name}}
								</strong>
								<p>
									{{customer.company}} <br>
									{{customer.city}} <br>
									{{customer.province}}, Philippines <br>
									<a href="#">
										{{customer.email}}
									</a>
								</p>
							</div>
							<div class="col-sm-6 text-right">
								<span>Payment To</span>
								<strong>
									Kingvish Hydraulic Trading
								</strong>
								<p>
									23 De Castro St. <br>
									Valenzuela City <br>
									Metro Manila, Philippines <br>
									<a href="#">
										baylor.company@gmail.com
									</a>
								</p>
							</div>
						</div>
					</div>

					<div class="line-items">
						<div class="headers clearfix">
							<div class="row">
								<div class="col-xs-3">Payment ID</div>
								<div class="col-xs-5">Date</div>
								<div class="col-xs-4 text-right">Amount</div>
							</div>
						</div>
					
						<div class="items">
							{{#each payments}}
							<div class="row item">
								<div class="col-xs-3 desc">
									{{id}}
								</div>
								<div class="col-xs-5 qty">
									{{payment_date}}
								</div>
								<div class="col-xs-4 amount text-right">
									₱ {{amount_paid}}
								</div>
							</div>
							{{/each}}
						</div>
						<div class="total text-right">
							<p class="extra-notes">
								<strong>Note</strong>
								This receipt is proof of your payment so please keep this document until the order is completely paid.
							</p>
							<div class="field">
								Amount Due <span>₱ {{order.amount_due}}</span>
							</div>
							<div class="field">
								Payment Total <span>₱ {{payment_total}}</span>
							</div>
							<div class="field grand-total">
								Balance <span>₱ {{order_balance}}</span>
							</div>
                            <div class="field">
								Change <span>₱ {{order_change}}</span>
							</div>
						</div>
					</div>
				</div>
			
		</div>
	</div>
</div>                    

